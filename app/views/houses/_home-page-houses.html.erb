<div class="container-outside">
    <% @houses[0..2].each do |house| %>
        <% if @houses.index(house).even? %>
            <div class="row no-gutter">
                <div class="col-sm-6 house-img">
                    <%= image_tag house.photos[0].image.url(), class: "img-responsive" %>
                    <div class="house-img-fact-box">
                        <ul>
                            <li><%= house.sf %> sq ft</li>
                            <li><%= house.garage %> car garage</li>
                            <li><%= house.bedroom %> bedrooms</li>
                            <li><%= house.bathroom %> bathrooms</li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <h3 class="text-center"><%= house.name %></h3>
                </div>
            </div>
        <% else %>
            <div class="row no-gutter">
                <div class="col-sm-6 col-sm-push-6 house-img">
                    <%= image_tag house.photos[0].image.url(), class: "img-responsive" %>
                    <div class="house-img-fact-box">
                        <ul>
                            <li><%= house.sf%> sq ft </li>
                            <li><%= house.garage %> car garage</li>
                            <li><%= house.bedroom %> bedrooms</li>
                            <li><%= house.bathroom %> bathrooms</li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-sm-pull-6">
                    <h3 class="text-center"><%= house.name %></h3>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
