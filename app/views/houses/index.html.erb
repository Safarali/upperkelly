<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <h2>Manage Houses</h2>
                        <div class="row">
                            <% @houses.each do |house| %>
                                <div class="col-md-3 col-sm-6">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3><%= house.name %></h3>
                                        </div>
                                        <div class="panel-body preview">
                                            <%= image_tag house.photos[0].image.url()%>
                                        </div>
                                        <div class="panel-footer">
                                            <%= link_to "Update", edit_house_path(house), class: "label label-primary" %>
                                            <%= link_to "View", house_path(house), class: "label label-success" %>
                                            <%= link_to "Delete", "#", class: "label label-danger" %>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
