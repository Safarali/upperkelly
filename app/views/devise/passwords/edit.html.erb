<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <h2>Change your password</h2>

                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                          <%= render 'shared/devisemessage' %>
                          <%= f.hidden_field :reset_password_token %>
                          <div class="form-group">
                            <!-- <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                            <% end %> -->
                            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", autofocus: true, placeholder: "New password" %>
                          </div>

                          <div class="form-group">
                            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control", autofocus: true, placeholder: "New password confirmation" %>
                          </div>

                          <div class="actions">
                            <%= f.submit "Change my password", class: "hero-btn form-btn" %>
                          </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
